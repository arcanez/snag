<SNAG>

  <!-- Database connection info -->
  <DB>
    <sysinfo>
      <dsn>dbi:Pg:dbname=sysinfo;host=localhost</dsn>
      <user>test</user>
      <pw>change</pw>
    </sysinfo>
    <grapher>
      <dsn>dbi:Pg:dbname=grapher;host=localhost</dsn>
      <user>test</user>
      <pw>change</pw>
    </grapher>
  </DB>

  <!-- Domain -->
  <domain>example.com</domain>

  <!-- Defaults for directories -->
  <base_dir>/opt/snag</base_dir>
  <log_dir>/opt/snag/log</log_dir>
  <tmp_dir>/opt/snag/tmp</tmp_dir>
  <state_dir>/opt/snag/tmp</state_dir>
  <conf_dir>/opt/snag/conf</conf_dir>

  <!-- Email to catch configuration and run time errors -->
  <email>somebody@something.com</email>
  <smtp>smtp.example.com</smtp>

  <!-- Seperators -->
  <rec_sep>~_~</rec_sep>
  <rrd_sep>:</rrd_sep>
  <line_sep>_@%_</line_sep>
  <parcel_sep>@%~%@</parcel_sep>
  <info_sep>:%:</info_sep>


  <!-- These server stanzas define what server modules to run and what ports to run them on -->
  <server name="sysinfo">
    <port>13351</port>
    <key>ddce269a1e3d054cae349621c198dd52</key> <!-- Random string -->
    <module>SNAG::Server::SystemInfo</module>
  </server>

  <server name='master'>
    <host>master.example.com</host> <!-- your master server's hostname -->
    <port>13341</port>
    <key>ddce269a1e3d054cae349621c198dd52</key>
    <module>SNAG::Server::Master</module>
  </server>

  <server name="sysrrd">
    <port>13356</port>
    <key>7H1553Rv3R1547H3RRD5l0Ln3WbJU57AB17M0R3</key> <!-- Random string -->
    <module>SNAG::Server::RRD</module>
    <dir>/var/rrd</dir>
  </server>

  <!-- Host definitions list what servers to run on a specific host -->
  <host name='master'>
    <server_list>sysinfo</server_list>
    <server_list>sysrrd</server_list>
    <server_list>master</server_list>
  </host>

</SNAG>
